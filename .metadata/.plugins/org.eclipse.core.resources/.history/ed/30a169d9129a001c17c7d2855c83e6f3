package luiz.udemy.While;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int x;
		
		System.out.println("Digite um número:");
		x = sc.nextInt();
		
		while (x != 0) {
			x = sc.nextInt();
		}
		
		sc.close();
	}

}
